# SAML-LDAP Bridge Configuration
# Copy this file to .env and configure your values

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=False

# SAML Service Provider Configuration
SAML_SP_ENTITY_ID=https://your-domain.com/saml-ldap-bridge
SAML_SP_ACS_URL=https://your-domain.com/saml/acs
SAML_SP_SLS_URL=https://your-domain.com/saml/sls

# SAML Identity Provider (Shibboleth) Configuration
SAML_IDP_ENTITY_ID=https://your-shibboleth-idp.edu/idp/shibboleth
SAML_IDP_SSO_URL=https://your-shibboleth-idp.edu/idp/profile/SAML2/Redirect/SSO
SAML_IDP_SLO_URL=https://your-shibboleth-idp.edu/idp/profile/SAML2/Redirect/SLO
SAML_IDP_X509_CERT=-----BEGIN CERTIFICATE-----
MIICXjCCAcegAwIBAgIJAKS...your-idp-certificate-here...
-----END CERTIFICATE-----

# eduMFA Configuration (Optional - for MFA)
EDUMFA_BASE_URL=https://your-edumfa-instance.edu
EDUMFA_API_KEY=your-edumfa-api-key
EDUMFA_REALM=default

# LDAP Server Configuration
LDAP_HOST=localhost
LDAP_PORT=389
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin-password

# Temporary Credentials Configuration
TEMP_CREDENTIAL_EXPIRY=3600
TEMP_CREDENTIAL_CLEANUP_INTERVAL=300

# SSL/TLS Configuration
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem